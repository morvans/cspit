// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Endpoint {
  id      String   @id @default(auto()) @map("_id") @db.ObjectId
  token   String   @unique @default(cuid())
  label   String
  reports Report[]
  
  @@map("endpoints")
}

// Unified Report model for all report types (CSP and Reporting API)
model Report {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  type      String   // Report type (e.g., "csp-violation", "deprecation", "intervention")
  timestamp DateTime @default(now())
  
  // Generic report fields (used by Reporting API reports)
  url       String?  // URL where the report was generated
  userAgent String?  // User agent of the client
  body      Json?    // Flexible JSON field to store the report body
  age       Int?     // Age of the report in milliseconds (from Reporting API)
  
  // CSP-specific fields (used by legacy CSP reports)
  documentUri        String? // CSP: Document URI
  referrer           String? // CSP: Referrer
  violatedDirective  String? // CSP: Violated directive
  effectiveDirective String? // CSP: Effective directive
  originalPolicy     String? // CSP: Original policy
  disposition        String? // CSP: Disposition (enforce/report-only)
  blockedUri         String? // CSP: Blocked URI
  lineNumber         Int?    // CSP: Line number
  columnNumber       Int?    // CSP: Column number
  sourceFile         String? // CSP: Source file
  statusCode         Int?    // CSP: Status code
  scriptSample       String? // CSP: Script sample
  rawReport          String? // CSP: Complete raw CSP report for debugging
  
  endpoint   Endpoint @relation(fields: [endpointId], references: [id])
  endpointId String   @db.ObjectId
  
  @@map("reports")
}

// NextAuth.js models
model Account {
  id                String  @id @default(auto()) @map("_id") @db.ObjectId
  userId            String  @db.ObjectId
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.String
  access_token      String? @db.String
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.String
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  sessionToken String   @unique
  userId       String   @db.ObjectId
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model User {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]

  @@map("users")
}

model VerificationToken {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verificationtokens")
}
